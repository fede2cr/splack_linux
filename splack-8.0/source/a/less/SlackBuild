#!/bin/sh
# Set initial variables:
CWD=`pwd`
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi
PKG=$TMP/package-less

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
if [ ! -d $PKG ]; then
  mkdir -p $PKG # place for the package to be built
fi

# Explode the package framework:
cd $PKG
explodepkg $CWD/_less.tar.gz

echo "+==========+"
echo "| less-358 |"
echo "+==========+"
cd $TMP
tar xzvf $CWD/less-358.tar.gz
cd less-358
./configure --prefix=/usr
make CFLAGS="-O2 -I/usr/include/ncurses" LDFLAGS=-s
cat less > $PKG/usr/bin/less
cat lesskey > $PKG/usr/bin/lesskey
cat lessecho > $PKG/usr/bin/lessecho
mkdir -p $PKG/usr/doc/less-358
cp -a README NEWS $PKG/usr/doc/less-358
chmod 644 $PKG/usr/doc/less-358/*
chown root.root $PKG/usr/doc/less-358/*
for page in less.nro lesskey.nro ; do
  cat $page | gzip -9c > $PKG/usr/man/man1/`basename $page .nro`.1.gz
done

# Build the package:
cd $PKG
tar czvf $TMP/less.tgz .

# Warn of zero-length files:
for file in `find . -type f -print` ; do
 if [ "`filesize $file`" = "0" ]; then
  echo "WARNING: zero length file $file"
 fi
 if [ "`filesize $file`" = "20" ]; then
  echo "WARNING: possible empty gzipped file $file"
 fi
done

# Clean up the extra stuff:
if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/less-358
  rm -rf $PKG
fi
