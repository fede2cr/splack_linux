#!/bin/sh
# Set initial variables:
CWD=`pwd`
if [ "$TMP" = "" ]; then
  TMP=/tmp
fi
PKG=$TMP/package-grep

if [ ! -d $TMP ]; then
  mkdir -p $TMP # location to build the source
fi
if [ ! -d $PKG ]; then
  mkdir -p $PKG # place for the package to be built
fi

# Explode the package framework:
cd $PKG
explodepkg $CWD/_grep.tar.gz

echo "+============+"
echo "| grep-2.4.2 |"
echo "+============+"
cd $TMP
tar xzvf $CWD/grep-2.4.2.tar.gz
cd grep-2.4.2
mkdir -p $PKG/usr/doc/grep-2.4.2
cp -a ABOUT-NLS AUTHORS COPYING ChangeLog INSTALL NEWS PATCHES.AC \
  PATCHES.AM README THANKS TODO $PKG/usr/doc/grep-2.4.2
chown root.root $PKG/usr/doc/grep-2.4.2/*
chmod 644 $PKG/usr/doc/grep-2.4.2/*
./configure --prefix=/usr
make CFLAGS=-O2 LDFLAGS=-s
cat src/grep > $PKG/bin/grep
cat src/egrep > $PKG/bin/egrep
cat src/fgrep > $PKG/bin/fgrep
cat doc/grep.1 | gzip -9c > $PKG/usr/man/man1/grep.1.gz
echo '.so man1/grep.1' | gzip -9c > $PKG/usr/man/man1/egrep.1.gz
echo '.so man1/grep.1' | gzip -9c > $PKG/usr/man/man1/fgrep.1.gz
cat doc/grep.info | gzip -9c > $PKG/usr/info/grep.info.gz
( cd po
  for file in *.gmo ; do
    LOC=`basename $file .gmo`
    mkdir -p $PKG/usr/share/locale/$LOC/LC_MESSAGES
    cat $file > $PKG/usr/share/locale/$LOC/LC_MESSAGES/grep.mo
  done )
# Build the package:
cd $PKG
tar czvf $TMP/grep.tgz .

# Warn of zero-length files:
for file in `find . -type f -print` ; do
 if [ "`filesize $file`" = "0" ]; then
  echo "WARNING: zero length file $file"
 fi
 if [ "`filesize $file`" = "20" ]; then
  echo "WARNING: possible empty gzipped file $file"
 fi
done

# Clean up the extra stuff:
if [ "$1" = "--cleanup" ]; then
  rm -rf $TMP/grep-2.4.2
  rm -rf $PKG
fi
